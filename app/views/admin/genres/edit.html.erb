<!--ジャンル名の変更-->
<div class="container">
  <div class="row">
    <div class="col-sm-7">
      <h2>ジャンル編集</h2>
      <%= render 'layouts/error_messages', validation: @genre %>

      <%= form_with model: [:admin,@genre], local:true do |f| %>
        <%= f.label :name,"ジャンル名" %>
        <%= f.text_field :name %>
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>