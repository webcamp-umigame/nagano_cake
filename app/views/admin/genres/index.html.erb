<div class="container">
  <div class="row">
    <div class="col-md-4 col-xs-offset-1">
      <%= render 'layouts/error_messages', validation: @genre %>

      <h2>ジャンル一覧・追加</h2>
      <!--ジャンルの追加画面-->
      <%= form_with model: [:admin,@genre], local:true do |f| %>
        <div class="form-group my-4">
          <%= f.label :name, "ジャンル名" %>
          <%= f.text_field :name, placeholder: "ジャンル名" %>
          <%= f.submit '追加', class:"btn btn-success" %>
        </div>
      <% end %>
      <!--ジャンルの一覧画面-->
      <table class="table able-inverse">
        <thead>
          <tr class="table-active">
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td><%= link_to '編集', edit_admin_genre_path(genre.id), class: "btn btn-success" %> </td>
            </tr>
            </tr>
          <% end %>
        </tbody>
      </table>

      <%= paginate @genres %>
    </div>
  </div>
</div>