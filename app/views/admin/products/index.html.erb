<h1>商品一覧</h1>
<table>
<thead>
<tr>
<th>商品ID</th>
<th>商品名</th>
<th>税抜価格</th>
<th>ジャンル</th>
<th></th>
<th>ステータス</th>
</tr>
</thead>

<tbody>
<% @products.each do |product| %>
<tr>
<td><%= product.id %></td>
<td><%= link_to product_path(product.id) do %>
<%= product.product_name %>
</td>
<% end %>
<td><%= product.sales_price %></td>

<td><%= product.genre.name %></td>

<% if product.sales_status == true %>
  <td>販売中</td>
  <% else %>
  <td>販売停止中</td>
  <% end %>
</tr>
<% end %>


</tbody>
</table>