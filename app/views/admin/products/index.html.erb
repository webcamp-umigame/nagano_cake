<h1>商品一覧</h1>
<table>
<thead>
<tr>
<th>商品ID</th>
<th>商品名</th>
<th>税抜価格</th>
<th>ジャンル</th>
<th></th>
<th>ステータス</th>
</tr>
</thead>

<tbody>
<%= @product.each do |product| %>
<tr>
<td><%= product.id %></td>
<td><%= link_to %> </td>
<td><%= product.sales_price %></td>
<td><%= link_to product_path(product.id) do %>
<%= product_name_tag product, :product_name %>
<% end %></td>
<td><%= product.sales_status %></td>

</tr>
</tbody>
</table>