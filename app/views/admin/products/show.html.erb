 <div class="container">
  <div clas="mt-5">
   <div class="row">
    <div class="col-lg-4">
    <h2>商品詳細</h2>
     <%= attachment_image_tag @product, :product_image, size: '200x200', class:"attachment product product_image fallback" %>
    </div>

     <div class="col-lg-3">
      <p>商品名</p>
      <p>商品説明</p>
      <p>ジャンル</p>
      <p>税込価格<br />
         (税抜価格)</p>
      <p>販売ステータス</p>
     </div>

     <div class="col-lg-5">
      <p><%= @product.product_name %></p>
      <p><%= @product.product_description %></p>
      <p><%= @product.genre.name %></p>
      <p><%= @product.add_tax_sales_price.to_s(:delimited) %>(<%= @product.sales_price %>)円</p>
      <br />
      <p><% if @product.sales_status == true %>
         <label class="text-success">販売中</label>
         <% else %>
         <label class="text-secondary">販売停止中</label>
         <% end %></p>
     </div>

        <%= link_to '編集する', edit_admin_product_path(@product), class: "btn btn-success text-center" %>
   </div>
  </div>
</div>
