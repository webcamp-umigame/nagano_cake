<div class="container">
  <div class="row">
    <div class="col">
      <h3>注文履歴詳細</h3>

      <!--注文履歴詳細-->
      <table>
        <tbody>
          <tr>
            <th>購入者</th>
            <td><%= link_to @customer_name, admin_customer_path(@order.customer_id) %></td>
          </tr>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td><%= @order.address %> <%= @order.address %><br><%= @order.addressee %></td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <th>注文ステータス</th>
            <td>
              <%= form_with model: @order, local: true do |f| %>
                <%= f.select :order_status, Order.order_statuses.keys.map {|k| [k, k]}, {}, { class: "form-control", style: 'margin-right: 5px;' } %>
                <%= f.submit "更新" class: "btn btn-sm btn-success" %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row">
    <!--各商品の製作ステータス-->
    <div class="col">
      <table class="table table-borderless">
        <thead>
          <tr class="table-active">
            <th>商品名</th>
            <th>単価（税込）</th>
            <th>数量</th>
            <th>小計</th>
            <th colospan>製作ステータス</th>
          </tr>
        </thead>
        <%= @order_products.each do |order_product| %>
          <tbody>
            <tr>
              <td><%= order_product.product.product_name %></td>
              <td><%= order_product.product.sales_price %></td>
              <td><%= order_product.amount %></td>
              <td><%= order_product.tax_price %></td>
              <td>
                <%= form_with model: order_product, local: true do |f| %>
                  <%= f.select :production_status, OrderProduct.production_statuses.keys.map {|k| [k, k]}, {}, { class: "form-control", style: 'margin-right: 5px;' } %>
                  <%= f.submit "更新" class: "btn btn-sm btn-success" %>
                <% end %>
            </tr>
          </tbody>
        <% end %>
      </table>
    </div>

    <!--会計情報-->
    <div class="col">
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td><%= "#{@amaunt_ex_shipping}円" %></td>
          </tr>
          <tr>
            <th>送料</th>
            <td><%= "#{@order.shipping_fee}円" %></td>
          </tr>
          <tr>
            <th>請求金額合計</th>
            <th><%= "#{@order.request_amount}円" %></th>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>