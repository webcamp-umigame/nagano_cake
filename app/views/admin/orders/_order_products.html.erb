<table class="table table-borderless">
  <thead>
    <tr class="table-active">
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  <%= order_products.each do |order_product| %>
    <tbody>
      <tr>
        <td><%= order_product.product.product_name %></td>
        <td><%= order_product.product.sales_price %></td>
        <td><%= order_product.amount %></td>
        <td><%= order_product.tax_price %></td>
        <td>
          <%= form_with model: order_product, local: true do |f| %>
            <%= f.select :production_status, OrderProduct.production_statuses.keys.map {|k| [k, k]}, {}, { class: "form-control", style: 'margin-right: 5px;' } %>
            <%= f.submit "更新" class: "btn btn-sm btn-success" %>
          <% end %>
      </tr>
    </tbody>
  <% end %>
</table>
