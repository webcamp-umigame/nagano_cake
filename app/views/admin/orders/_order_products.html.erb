<table class="table table-borderless">
  <thead>
    <tr class="table-active">
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th>製作ステータス</th>
    </tr>
  </thead>
  <% order_products.each do |order_p| %>
    <tbody>
      <tr>
        <td><%= order_p.product.product_name %></td>
        <td><%= converting_to_jpy(order_p.tax_price) %></td>
        <td><%= order_p.amount %></td>
        <td><%= converting_to_jpy(order_p.tax_price * order_p.amount) %></td>
        <td>
          <%= form_with model: order_product, url: admin_order_product_path(order_p.id), method: :patch do |f| %>
            <%= f.select :production_status, OrderProduct.production_statuses.keys.map {|k| [k, k]}, { selected: order_p.production_status }, { style: 'margin-right: 5px;' } %>
            <%= f.submit "更新", class: "btn btn-sm btn-success" %>
          <% end %>
      </tr>
    </tbody>
  <% end %>
</table>
