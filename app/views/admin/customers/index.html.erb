<div class="container">
  <div class="row">
    <div class="col-md-9">
      <h2>会員一覧</h2>
      <table class="table">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.id %></td>
              <td><%= link_to customer.first_name+customer.last_name, admin_customer_path(customer) %></td>
              <td><%= customer.email %></td>
              <td>
                <%= customer.is_deleted %>
                <!--if文を使って文字を表示させる-->
              </td>
            </tr>
            <br>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>