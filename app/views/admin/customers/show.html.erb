<div class="container">
  <div class="row">
    <div class="col">
      <h4><%= @customer.first_name %>　<%= @customer.last_name%>さんの会員情報</h4></br>

      <table>
        <tr>
          <th>会員ID</th>
          <td><%= current_customer %></td>
        </tr>
      </table></br>

      <table>
        <tr>
          <th>氏名</th>
          <td>　　　　　　　<%= @customer.first_name %> <%= @customer.last_name %></td>
        </tr>
      </table></br>

      <table>
        <tr>
          <th>フリガナ</th>
          <td>　　　　　<%= @customer.first_name_kana %> <%= @customer.last_name_kana %></td>
        </tr>
      </table></br>

      <table>
        <tr>
          <th>郵便番号</th>
          <td>　　　　　<%= @customer.postal_code %></td>
        </tr>
        </table></br>

      <table>
        <tr>
          <th>住所</th>
          <td>　　　　　　　<%= @customer.address %></td>
        </tr>
      </table></br>

      <table>
        <tr>
          <th>電話番号</th>
          <td>　　　　　<%= @customer.telephone_number %></td>
        </tr>
      </table></br>

      <table>
        <tr>
          <th>メールアドレス</th>
          <td>　　<%= @customer.email %></td>
        </tr>
      </table></br>

      <table>
        <tr>
          <th>会員ステータス</th>
          <% if @customer.is_deleted == false %>
          <td>　　有効</td>
          <% else %>
          <td>　　退会</td>
          <% end %>
        </tr>
      </table></br>

      <div><%= link_to "編集する", edit_admin_customer_path, class: "btn btn-success" %>　　<%= link_to "注文履歴一覧を見る", admin_order_path, class: "btn btn-info" %></div>
    </div>
  </div>
</div>
