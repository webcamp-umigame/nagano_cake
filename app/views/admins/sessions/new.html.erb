<div class="container">
  <div class="row">
    <div class="col">
      <h2>管理者ログイン</h2></br></br>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field">
          <%= f.label :email, "メールアドレス" %>　　<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div></br>

        <div class="field">
          <%= f.label :password, "パスワード" %>　　　　<%= f.password_field :password, autocomplete: "current-password" %>
        </div></br>

        <div class="actions">
          <%= f.submit "Log in", class: "btn btn-primary" %>
        </div></br>
      <% end %>
    </div>
  </div>
</div>
