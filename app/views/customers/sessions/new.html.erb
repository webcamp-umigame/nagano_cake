<div class="container">
  <div class="row">
    <div class="col">
      <h2>ログイン</h2></br>
      <h4>会員の方はこちらからログイン</h4></br>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

        <div class="field">
          <%= f.label :メールアドレス %>　　<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div></br>

        <div class="field">
          <%= f.label :パスワード %>　　　　<%= f.password_field :password, autocomplete: "current-password" %>
        </div></br>

        <div class="actions">
          <%= f.submit "ログイン", class: "btn btn-info" %>
        </div></br>
      <% end %>
      <h3>会員登録がお済みでない方</h3></br>

      <%= render "customers/shared/links" %>から新規登録を行ってください。
    </div>
  </div>
</div>
