<div class="container">
  <div class="row">
    <div class="col">
      <h2>新規会員登録</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :（姓） %><br />
        <%= f.text_field :first_name, autofocus: true, class: "first_name" %>
      </div>

      <div class="field">
        <%= f.label :（名） %><br />
        <%= f.text_field :last_name, autofocus: true, class: "last_name" %>
      </div>

      <div class="field">
        <%= f.label :（セイ） %><br />
        <%= f.text_field :first_name_kana, autofocus: true, class: "first_name_kana" %>
      </div>

      <div class="field">
        <%= f.label :（メイ） %><br />
        <%= f.text_field :last_name_kana, autofocus: true, class: "last_name_kana" %>
      </div>

      <div class="field">
        <%= f.label :アドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :郵便番号（ハイフンなし） %><br>
        <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
      </div>

      <div class="field">
        <%= f.label :住所 %><br />
        <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
      </div>

      <div class="field">
        <%= f.label :電話番号（ハイフンなし） %><br>
        <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
      </div>

      <div class="field">
        <%= f.label :パスワード（6⽂字以上） %>
        <% if @minimum_password %>
        <em>(<%= @minimum_password %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="field">
        <%= f.label :パスワード（確認⽤） %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>
      
      <div class="actions">
        <%= f.submit "Sign up", class: "btn btn-success text-center" %>
      </div>
    <% end %>

    <%= render "customers/shared/links" %>
   </div>
  </div>
</div>