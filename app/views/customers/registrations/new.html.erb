<div class="container">
  <div class="row">
    <div class="col">
      <h2>新規会員登録</h2></br></br>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "customers/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :名前 %><%= f.label :（姓） %>　　　　　　　　　<%= f.text_field :first_name, autofocus: true, class: "first_name", placeholder: "令和" %>　<%= f.label :（名） %>　<%= f.text_field :last_name, autofocus: true, class: "last_name", placeholder: "道子" %>
      </div></br>

      <div class="field">
        <%= f.label :フリガナ %><%= f.label :（セイ） %>　　　　　　<%= f.text_field :first_name_kana, autofocus: true, class: "first_name_kana", placeholder: "レイワ" %>　<%= f.label :（メイ） %><%= f.text_field :last_name_kana, autofocus: true, class: "last_name_kana", placeholder: "ミチコ" %>
      </div></br>

      <div class="field">
        <%= f.label :メールアドレス %>　　　　　　　<%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </div></br>

      <div class="field">
        <%= f.label :郵便番号（ハイフンなし） %>　　<%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %>
      </div></br>

      <div class="field">
        <%= f.label :住所 %>　　　　　　　　　　　　<%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木" %>
      </div></br>

      <div class="field"><%= f.label :電話番号（ハイフンなし） %>　　<%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "000000000000" %>
      </div></br>

      <div class="field">
        <%= f.label :パスワード（6⽂字以上） %>
        <% if @minimum_password %>
        <em>(<%= @minimum_password %> characters minimum)</em>
        <% end %>　　<%= f.password_field :password, autocomplete: "new-password" %>
      </div></br>

      <div class="field">
        <%= f.label :パスワード（確認⽤） %>　　　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div></br>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success text-center" %>
      </div></br>
    <% end %>
    <h3>既に登録済みの方</h3></br>

    <%= render "customers/shared/links" %>　からログインしてください。
   </div>
  </div>
</div>
