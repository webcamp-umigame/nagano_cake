<div class="container">
    <div class="row">
        <div class="col-md-7">
        <h2>マイページ</h2>

        <div><h5>登録情報 <%= link_to "編集する", customers_profile_edit_path, class: "btn btn-success" %></h5></div>

        <table class="table table-bordered">
            <tbody>

                    <tr><th>氏名</th><td><%= current_customer.first_name %> <%= current_customer.last_name %></td></tr>
                    <tr><th>カナ</th><td><%= current_customer.first_name_kana %> <%= current_customer.last_name_kana %></td></tr>
                    <tr><th>郵便番号</th><td><%= current_customer.postal_code %></td></tr>
                    <tr><th>住所</th><td><%= current_customer.address %></td></tr>
                    <tr><th>電話番号</th><td><%= current_customer.telephone_number %></td></tr>
                    <tr><th>メールアドレス</th><td><%= current_customer.email %></td></tr></tr>

              </tbody>
        </table>

        <div><h5>配送先 <%= link_to "一覧を見る", deliveries_path, class: "btn btn-info" %></h5></div>
        <div><h5>注文履歴 <%= link_to "一覧を見る", orders_path, class: "btn btn-info" %></h5></div>

        </div>
    </div>
</div>
