<html>
<div class="container">
  <h2>商品一覧</h2>
  (全<%= @search_products.count %>件)
   <div class="row">
    <div class="col-1"></div>
     <div class="col-md-10 mx-auto">
       <div class="list-wrap">
        <% @search_products.each do |product| %>
       <div class="list-box">
       <div class="image_wrap">
        <%= link_to product_path(product.id) do %>
        <%= attachment_image_tag product, :product_image, size: '200x150', class:"attachment product product_image fallback" %>
        <% end %></div>
       <div class="list-comment">
        <span class="list-name"><%= product.product_name %></span><br />
        <span class="list-price">￥<%= product.sales_price.to_s(:delimited) %></span>
       </div>
       </div>
       <% end %>
     </div>
    <%= paginate @products %>
    </div>
   <div class="col-md-1"></div>
  </div>
</div>
</html>