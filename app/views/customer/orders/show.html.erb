<div class="container">
  <div class="row">
    <div class="col-md-7">
      <h2>注文履歴詳細</h2>
      <h3>注文情報</h3>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>注文日</th>
            <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>
          <tr>
            <th>配送先</th>
            <td>
              〒<%= @order.postal_code %><br>
              <%= @order.address %><%= order.addressee %>
            </td>
          </tr>
          <tr>
            <th>支払方法</th>
            <td>orderの内容</td>
          </tr>
          <tr>
            <th>ステータス</th>
            <td>orderの内容</td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-3 mt-5">
      <h3>請求情報</h3>
      <table class="table table-bordered">
        <tbody>
          <tr>
            <th>商品合計</th>
            <td>税込の価格</td>
          </tr>
          <tr>
            <th>配送料</th>
            <td>800円</td>
          </tr>
          <tr>
            <th>ご請求額</th>
            <td>合計額</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-md-9">
      <h3>注文内容</h3>
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>商品</th>
            <th>単価(税込)</th>
            <th>個数</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>商品名</td>
            <td>税込価格</td>
            <td>個数</td>
            <td>小計</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>