<div class="container">
  <div class="row">
    <div class="col">
      <h2>注文情報入力</h2>
      <%= form_with model: @order, url: orders_confirm_path, local: :true do |f| %>
      <div>支払い方法</div>

      <label><%= f.radio_button :payment_method, :クレジットカード, checked: true %>クレジットカード</label>
      <label><%= f.radio_button :payment_method, :銀行振込 %>銀行振込</label>

      <div>お届け先</div>
      <div><label><%= f.radio_button :address_number, 1, checked: true %> ご自身の住所</label>
      <label>〒<%= current_customer.postal_code %> <%= current_customer.address %><%= current_customer.first_name %><%= current_customer.last_name %></label></div>

      <div>
        <label>
          <%= f.radio_button :address_number,2 %> 登録済からの選択</label>
          <%= f.select(:delivery_id, current_customer.deliveries.map { |deli| ["〒 #{deli.full_address}", deli.id] }) %>
      </div>


      <table>
      <label><%= f.radio_button :address_number,3 %> 新しいお届け先</label><br />
      <label>郵便番号（ハイフンなし）
      <%= f.text_field :postal_code %></label><br />
      <label>住所<%= f.text_field :address %></label><br />
      <label>宛名<%= f.text_field :addressee %></label>
      </table>

      <%= f.submit '確認画面へ進む', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>

