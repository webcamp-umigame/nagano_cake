<div class="container">
  <diiv class="row">
    <div class="col-md-11">
      <h2>注文履歴一覧</h2>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払金額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at.strftime('%Y/%m/%d') %></td>
              <td>
                〒<%= order.postal_code %><br>
                <%= order.address %>  <%= order.addressee %>
              </td>
              <td>
                <% order.order_products.each do |order_product| %>
                  ・<%= order_product.product.product_name %><br>
                <% end %>
              </td>
              <td><%= converting_to_jpy(order.request_amount) %>円</td>
              <td><%= order.order_status %></td>
              <td><%= link_to '表示する', order_path(order), class:"btn btn-primary" %></td>
            </tr>
          <% end %>
          <%= paginate @orders %>
        </tbody>
      </table>
    </div>
  </div>
</div>
