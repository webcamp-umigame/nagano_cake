<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h2>注文情報確認</h2></br></br>
        <table class="table table-bordered">
          <thead>
      		  <tr class="table-active">
      		    <td>商品名</td>
      		    <td>単価（税込）</td>
      		    <td>数量</td>
      		    <td>小計</td>
      		  </tr>

      		  <% @cart_items.each do |cart_item| %>
      		    <% @total+= (cart_item.product.sales_price*1.1*cart_item.amount).floor %>
      		    <tr>
      		      <td><%= attachment_image_tag cart_item.product, :product_image, size: '30x30', class:"attachment product product_image fallback"%><%= cart_item.product.product_name %></td>
      		      <td><%= (cart_item.product.sales_price*1.1).floor.to_s(:delimited) %></td>
      		      <td><%= cart_item.amount %></td>
      		      <td><%= (cart_item.product.sales_price*1.1*cart_item.amount).floor.to_s(:delimited) %></td>
      		    </tr>
      		  <% end %>
          </thead>
        </table>

        <table class="table table-bordered">
          <thead>
            <tr>
              <th>送料</th>
              <th>商品合計</th>
            	<th>請求金額</th>
            </tr>
          </thead>
        <tbody>
          <tr>
            <td>800</td>
            <td><%= converting_to_jpy(@total) %></td>
            <td><%= converting_to_jpy(@total + @order.shipping_fee) %></td>
          </tr>
        </tbody>
      </table>

      <table>
        <tr>
	        <th>支払い方法</th>
	        <td>　<%= @order.payment_method %></td></br>
	      </tr>
      </table></br>
      <table>
        <tr>
          <th>お届け先</th>
          <td>　　〒<%= @order.postal_code %><%= @order.address %></br>　　<%= @order.addressee %></td>
        </tr>
      </table></br>

      <%= form_with model: @order, url: orders_path, method: :post do |f| %>
          <%= f.hidden_field :payment_method %>
          <%= f.hidden_field :postal_code %>
          <%= f.hidden_field :address %>
          <%= f.hidden_field :addressee %>
          <%= f.submit "注文を確定する", class:"btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
