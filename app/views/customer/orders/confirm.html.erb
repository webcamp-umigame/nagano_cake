<div class="container">
    <div class="row">
        <div class="col">
            <h4>注文情報確認</h4>
            <table border="1">
                <tr>
                <td>商品名</td>
                <td>単価（税込）</td>
                <td>数量</td>
                <td>小計</td>
                </tr>

              <% @cart_items.each do |cart_item| %>
				<% @total+= (cart_item.product.sales_price*1.1*cart_item.amount).floor %>

					<tr>
						<td><%= cart_item.product.product_name %>
							<td><%= (cart_item.product.sales_price*1.1).floor %></td>
							<td><%= cart_item.amount %></td>
							<td><%= (cart_item.product.sales_price*1.1*cart_item.amount).floor %></td>
						</tr>
						<% end %>

            </table>

            <table border="1">
            <tr><th>送料</th><td>800</td></tr>
            <tr><th>商品合計</th><td><%= @total%></td></tr>
            <tr><th>請求金額</th><td><%= @total+800 %></td></tr>

            </table>
            <table><tr><th>支払い方法</th><td>　<%= @order.payment_method %></td></tr>
            <tr><th>お届け先</th><td>〒<%= @order.postal_core %><%= @order.address %><%= @order.addressee %></td></tr>
            </table>
            </table>
            <table>
            </table>
            <%= form_with model: @order, url: orders_path, method: :post do |f| %>
            <%= f.hidden_field :customer_id, :value => @order.customer_id %>
            <%= f.hidden_field :payment_method, :value => @order.payment_method %>
            <%= f.hidden_field :shipping_fee, :value => @order.shipping_fee %>
            <%= f.hidden_field :request_amount, :value => @order.request_amount %>
            <%= f.hidden_field :order_status, :value => @order.order_status %>
            <%= f.hidden_field :addressee, :value => @order.addressee %>
            <%= f.hidden_field :postal_core, :value => @order.postal_core %>
            <%= f.hidden_field :address, :value => @order.address %>
            <%= f.hidden_field :created_at, :value => @order.created_at %>
            <%= f.hidden_field :updated_at, :value => @order.updated_at %>
            <%= f.submit "注文を確定する", class:"btn btn-primary" %>
            <% end %>
        </div>
    </div>
</div>
