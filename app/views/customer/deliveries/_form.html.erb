<div class="field">
  <table class="table table-borderless">
    <tbody>
      <%= form_with model: delivery, local: true do |f| %>
        <tr>
          <td><%= f.label :postal_code, "郵便番号（ハイフンなし）" %></td>
          <td><%= f.text_field, class: "form-control", autofocus: true, placeholder: "000000" %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :address, "住所" %></td>
          <td><%= f.text_field, class: "form-control", placeholder: "東京都渋谷区代々木神園町0-0" %></td>
          <td></td>
        </tr>
        <tr>
          <td><%= f.label :addressee, "宛名" %></td>
          <td><%= f.text_field, class: "form-control", placeholder: "令和道子" %></td>
          <td><%= f.submit btn, class: "btn btn-success" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
